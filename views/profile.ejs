<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!--  This file has been downloaded from bootdey.com @bootdey on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title><%=username%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/profile/css/style.css" />
    <link rel="stylesheet" href="/profile/css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <!-- ======= Header ======= -->
    <header id="header" class="header">
      <div
        class="container-fluid container-xl d-flex align-items-center justify-content-between"
      >
        <a href="/" class="logo d-flex align-items-center">
          <img src="/profile/img/logo.png" alt="" />
          <span>Blogr</span>
        </a>

        <nav id="navbar" class="navbar">
          <ul>
            <li><a class="nav-link scrollto active" href="#hero">Home</a></li>
            <li><a class="nav-link scrollto" href="#search">Search</a></li>
            <li><a class="nav-link scrollto" href="#features">Features</a></li>
            <li><a class="nav-link scrollto" href="#team">Team</a></li>
            <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
            <li><a class="getstarted scrollto" href="/logout">Logout</a></li>
          </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
        <!-- .navbar -->
      </div>
    </header>
    <div class="container">
      <!-- End Header -->
      <div class="main-body">
        <div class="row gutters-sm">
          <div class="col-md-4 mb-3">
            <div class="card" >

              <div class="card-body">
                <div
                  class="d-flex flex-column align-items-center text-center"
                  style="margin: 4% auto;"
                >
                  <img
                    src="https://bootdey.com/img/Content/avatar/avatar7.png"
                    alt="Admin"
                    class="rounded-circle"
                    width="150"
                  />
                  <div class="mt-3">
                    <h4><%=username%></h4>
                    <p class="text-secondary mb-1"><%=name%></p>
                    <p class="text-secondary mb-1"> Blogs :  <%=totblog.length%></p>
                    <p class="text-secondary mb-1"> Reads :  1003</p>
                    <!-- <button class="btn btn-primary">Follow</button>
                    <button class="btn btn-outline-primary">Message</button> -->
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-md-8">
            <form action ="/updateprofile",method = "POST">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Full Name</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><input type="text" placeholder= <%=name%> name = "fullname"></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><input type="text" placeholder= <%=email%> name = "email"></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Mobile</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><input type="text" placeholder=<%=mobile%> name = "mobile"></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Address</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                    <input type="text" placeholder=<%=address%> name = "address">
                  </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-12" style = "text-align: center;margin:1.5% auto ;" >
                    <button type="submit" formmethod="post" class="btn btn-info">Edit </button>
                  </div>
                </div>
              </div>
            </div>
            </form>
          </div>
        
        </div>

        <!-- show blog start -->
        <div class ="row">
        <div class="col-6 btn-group btn-group-toggle " data-toggle="buttons">
          <label class="btn btn-secondary active">
            <input  onclick = "updatedisplay(event,'draft')" type="radio" name="options" id="option1" autocomplete="off" checked> Draft
          </label>
          <label class="btn btn-secondary">
            <input  onclick = "updatedisplay(event,'publish')" type="radio" name="options" id="option2" autocomplete="off"> Published
          </label>
          <label class="btn btn-secondary">
            <input  onclick = "updatedisplay(event,'fav')" type="radio" name="options" id="option3" autocomplete="off">Favourite
          </label>
        </div>  
        </div>   
        <div class="row gutters-sm">
          <div class="col-12" >
            <div class="card h-100">
              <div class="card-body" >

                <div id = "fav"class ="blog" style = "padding-top: 2%;">
                <% for(var i = 0;i < favblog.length;i++) { %>
                  <div class ="row">
                    <div class = "col-6">
                        <%= favblog[i].title %>
                        <br>
                        <sub><%= favblog[i].lastUpdateTime %></sub> 
                    </div>
                    <div class ="col-3" style = "margin: auto; text-align: center;">
                      Views :  <%= favblog[i].views %>
                    </div>
                    <div class="col-3" style = "margin: auto;">
                      <div class="row">
                        <div class="col-3"></div>
                        <div class="col-2">
                          <form class = "form-inline" action = "/draft/<%=username%>/<%= favblog[i].key %>",method = "get">
                          <button type="submit" class="btn btn-default" aria-label="Left Align">
                          <span  aria-hidden="true"><img src ="/profile/img/writing.png" width = "25px" height = "25px"></span>
                          </button>
                          </form>
                        </div>
                        <div class="col-2">
                          <form class = "form-inline" action = "/view/<%=username%>/<%= blog[i].key %>"  method = "get">
                          <button type="submit" class="btn btn-default" aria-label="Left Align" >
                            <span  aria-hidden="true"><img src ="/profile/img/file.png" width = "25px" height = "25px"></span>
                            </button>
                        </form>
                      </div>
                        <div class="col-2">
                          <form  class = "form-inline" action = "/delete/<%=username%>/<%= favblog[i].key %>",method = "get">
                          <button type="submit" class="btn btn-default" aria-label="Left Align">
                          <span  aria-hidden="true"><img src ="/profile/img/delete.png" width = "25px" height = "25px"></span>
                          </button>
                          </form>
                        </div>
                        <div class="col-3"></div>
                      </div>                          
                    </div>
                  </div>
                  <hr>
                <% } %>
                </div>

                <div id = "draft" class ="blog" style = "padding-top: 2%;">
                  <% for(var i = 0;i < blog.length;i++) { %>
                    <div class ="row">
                      <div class = "col-6">
                          <%= blog[i].title %>
                          <br>
                          <sub><%= blog[i].lastUpdateTime %></sub> 
                      </div>
                      <div class ="col-3" style = "margin: auto; text-align: center;">
                        Views :  <%= blog[i].views %>
                      </div>
                      <div class="col-3" style = "margin: auto;">
                        <div class="row">
                          <div class="col-3"></div>
                          <div class="col-2">
                            <form class = "form-inline" action = "/draft/<%=username%>/<%= blog[i].key %>",method = "get">
                            <button type="submit" class="btn btn-default" aria-label="Left Align">
                            <span  aria-hidden="true"><img src ="/profile/img/writing.png" width = "25px" height = "25px"></span>
                            </button>
                            </form>
                          </div>
                          <div class="col-2">
                            <form class = "form-inline"  action = "/view/<%=username%>/<%= blog[i].key %>",method = "get">
                            <button type="submit" class="btn btn-default" aria-label="Left Align" >
                              <span  aria-hidden="true"><img src ="/profile/img/file.png" width = "25px" height = "25px"></span>
                              </button>
                          </form>
                        </div>
                          <div class="col-2">
                            <form  class = "form-inline" action = "/delete/<%=username%>/<%= blog[i].key %>",method = "get">
                            <button type="submit" class="btn btn-default" aria-label="Left Align">
                            <span  aria-hidden="true"><img src ="/profile/img/delete.png" width = "25px" height = "25px"></span>
                            </button>
                            </form>
                          </div>
                          <div class="col-3"></div>
                        </div>                          
                      </div>
                    </div>
                    <hr>
                  <% } %>
                  </div>


                  <div id = "publish" class ="blog" style = "padding-top: 2%;">
                    <% for(var i = 0;i < blog.length;i++) { %>

                      <% if(blog[i].draft == true) { continue;} %>
                      <div class ="row">
                        <div class = "col-6">
                            <%= blog[i].title %>
                            <br>
                            <sub><%= blog[i].lastUpdateTime %></sub> 
                        </div>
                        <div class ="col-3" style = "margin: auto; text-align: center;">
                          Views :  <%= blog[i].views %>
                        </div>
                        <div class="col-3" style = "margin: auto;">
                          <div class="row">
                            <div class="col-3"></div>
                            <div class="col-2">
                              <form class = "form-inline" action = "/draft/<%=username%>/<%= blog[i].key %>",method = "get">
                              <button type="submit" class="btn btn-default" aria-label="Left Align">
                              <span  aria-hidden="true"><img src ="/profile/img/writing.png" width = "25px" height = "25px"></span>
                              </button>
                              </form>
                            </div>
                            <div class="col-2">
                              <form class = "form-inline"  action = "/view/<%=username%>/<%= blog[i].key %>",method = "get">
                              <button type="submit" class="btn btn-default" aria-label="Left Align" >
                                <span  aria-hidden="true"><img src ="/profile/img/file.png" width = "25px" height = "25px"></span>
                                </button>
                            </form>
                          </div>
                            <div class="col-2">
                              <form  class = "form-inline" action = "/delete/<%=username%>/<%= blog[i].key %>",method = "get">
                              <button type="submit" class="btn btn-default" aria-label="Left Align">
                              <span  aria-hidden="true"><img src ="/profile/img/delete.png" width = "25px" height = "25px"></span>
                              </button>
                              </form>
                            </div>
                            <div class="col-3"></div>
                          </div>                          
                        </div>
                      </div>
                      <hr>
                    <% } %>
                    </div>
              </div>
            </div>
          </div>


        </div>
        <!-- show blog end -->


      </div>
    </div>
    <script>
      function updatedisplay(evt,curr)
      {
        allblog = document.getElementsByClassName("blog");
        for (i = 0; i < allblog.length; i++) 
          allblog[i].style.display = "none";
        console.log(curr);
        document.getElementById(curr).style.display = "block";
        $(evt.target).addClass("active");
      }
    </script>
    <script type="text/javascript"></script>
  </body>
</html>
