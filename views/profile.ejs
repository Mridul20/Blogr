<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!--  This file has been downloaded from bootdey.com @bootdey on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title><%=username%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/profile/css/style.css" />
    <link rel="stylesheet" href="/profile/css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <!-- ======= Header ======= -->
    <header id="header" class="header">
      <div
        class="container-fluid container-xl d-flex align-items-center justify-content-between"
      >
        <a href="/" class="logo d-flex align-items-center">
          <img src="/profile/img/logo.png" alt="" />
          <span>Blogr</span>
        </a>

        <nav id="navbar" class="navbar">
          <ul>
            <li><a class="nav-link scrollto active" href="#hero">Home</a></li>
            <li><a class="nav-link scrollto" href="#search">Search</a></li>
            <li><a class="nav-link scrollto" href="#features">Features</a></li>
            <li><a class="nav-link scrollto" href="#team">Team</a></li>
            <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
          </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
        <!-- .navbar -->
      </div>
    </header>
    <div class="container">
      <!-- End Header -->
      <div class="main-body">
        <div class="row gutters-sm">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <div
                  class="d-flex flex-column align-items-center text-center"
                  style=""
                >
                  <img
                    src="https://bootdey.com/img/Content/avatar/avatar7.png"
                    alt="Admin"
                    class="rounded-circle"
                    width="150"
                  />
                  <div class="mt-3">
                    <h4><%=username%></h4>
                    <p class="text-secondary mb-1"><%=name%></p>
                    <p class="text-secondary mb-1"> Blogs :  <%=totblog.length%></p>
                    <p class="text-secondary mb-1"> Reads :  1003</p>
                    <!-- <button class="btn btn-primary">Follow</button>
                    <button class="btn btn-outline-primary">Message</button> -->
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Full Name</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">Kenneth Valdez</div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">fip@jukmuh.al</div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Mobile</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">(320) 380-4539</div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Address</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                    Bay Area, San Francisco, CA
                  </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-12" style = "text-align: center;margin:1.5% auto ;" >
                    <a
                      class="btn btn-info"
                      target="__blank"
                      href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills"
                      >Edit</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- show blog start -->
        <div class="row gutters-sm">
          <div class="col-12">
            <div class="card h-100">
              <button onclick = "updatedisplay(event,'draft')">Draft</button>
              <button onclick = "updatedisplay(event,'publish')">Publish</button>
              <button onclick = "updatedisplay(event,'fav')">Favourite</button>      
              <div class="card-body">

                <div id = "fav" class ="blog">
                <% for(var i = 0;i < favblog.length;i++) { %>
                  <small>Web Design</small>
                  <div class="progress mb-3" style="height: 5px">
                    <div
                      class="progress-bar bg-primary"
                      role="progressbar"
                      style="width: 80%"
                      aria-valuenow="80"
                      aria-valuemin="0"
                      aria-valuemax="100"
                    ></div>
                  </div>
                <% } %>
                </div>

                <div id = "draft" class ="blog">
                  <% for(var i = 0;i < blog.length;i++) { %>
                    <small>One Page</small>
                    <div class="progress mb-3" style="height: 5px">
                      <div
                        class="progress-bar bg-primary"
                        role="progressbar"
                        style="width: 89%"
                        aria-valuenow="89"
                        aria-valuemin="0"
                        aria-valuemax="100"
                      ></div>
                    </div>
                  <% } %>
                  </div>


                  <div id = "publish" class ="blog">
                    <% for(var i = 0;i < blog.length;i++) { %>
                      <small>Website Markup</small>
                      <div class="progress mb-3" style="height: 5px">
                        <div
                          class="progress-bar bg-primary"
                          role="progressbar"
                          style="width: 72%"
                          aria-valuenow="72"
                          aria-valuemin="0"
                          aria-valuemax="100"
                        ></div>
                      </div>
                    <% } %>
                    </div>
              </div>
            </div>
          </div>
        </div>
        <!-- show blog end -->


      </div>
    </div>
    <script>
      function updatedisplay(evt,curr)
      {
        allblog = document.getElementsByClassName("blog");
        for (i = 0; i < allblog.length; i++) 
          allblog[i].style.display = "none";
        console.log(curr);
        document.getElementById(curr).style.display = "block";
        $(evt.target).addClass("active");
      }
    </script>
    <script type="text/javascript"></script>
  </body>
</html>
