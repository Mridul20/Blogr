                            <button
                              type="submit"
                              class="btn btn-default"
                              aria-label="Left Align"
                            >
                              <span aria-hidden="true"
                                ><img
                                  src="/profile/img/delete.png"
                                  width="25px"
                                  height="25px"
                              /></span>
                            </button>
                          </form>
                        </div>
                        <div class="col-3"></div>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <% } %>
                </div>
              </div>
            </div>
