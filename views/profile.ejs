        <!-- show blog start -->
        <div class="row">
          <div class="col-3"></div>
          <div class="col-6 btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary active">
              <input
                onclick="updatedisplay(event,'draft')"
                type="radio"
                name="options"
                id="option1"
                autocomplete="off"
                checked
              />
              Draft
            </label>
            <label class="btn btn-secondary">
              <input
                onclick="updatedisplay(event,'publish')"
                type="radio"
                name="options"
                id="option2"
                autocomplete="off"
              />
              Published
            </label>
            <label class="btn btn-secondary">
              <input
                onclick="updatedisplay(event,'fav')"
                type="radio"
                name="options"
                id="option3"
                autocomplete="off"
              />Favourite
            </label>
          </div>
          <div class="col-3"></div>
        </div>
        <div class="row gutters-sm">
          <div class="col-12" >
            <div class="card h-100">
              <div class="card-body" style="background-color: #E6E6E6;">
                <div id="fav" class="blog" style="padding-top: 2%">
                  <% for(var i = 0;i < favblog.length;i++) { %>
                  <div class="row">
                    <div class="col-6">
                      <%= favblog[i].title %>
                      <br />
                      <sub><%= favblog[i].lastUpdateTime %></sub>
                    </div>
                    <div class="col-3" style="margin: auto; text-align: center">
                      Views : <%= favblog[i].views %>
                    </div>
                    <div class="col-3" style="margin: auto">
                      <div class="row">
                        <div class="col-3"></div>
                        <div class="col-2">
                          <form
                            class="form-inline"
                            action="/view/<%=username%>/<%= blog[i].key %>"
                            method="get"
                          >
                            <button
                              type="submit"
                              class="btn btn-default"
                              aria-label="Left Align"
                            >
                              <span aria-hidden="true"
                                ><img
                                  src="/profile/img/file.png"
                                  width="25px"
                                  height="25px"
                              /></span>
                            </button>
                          </form>
                        </div>
                        <div class="col-2">
                          <form
                            class="form-inline"
                            action="/unbookmark/<%= favblog[i].key %>"
                            ,method="get"
                          >
                            <button
                              type="submit"
                              class="btn btn-default"
                              aria-label="Left Align"
                            >
                              <span aria-hidden="true"
                                ><img
                                  src="/profile/img/delete.png"
                                  width="25px"
                                  height="25px"
                              /></span>
                            </button>
                          </form>
                        </div>
                        <div class="col-3"></div>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <% } %>
                </div>

                <div id="draft" class="blog" style="padding-top: 2%">
                  <% for(var i = 0;i < blog.length;i++) { %> <% if(blog[i].draft
                  == false) {continue;} %>
                  <div class="row">
                    <div class="col-6">
                      <%= blog[i].title %>
                      <br />
                      <sub><%= blog[i].lastUpdateTime %></sub>
                    </div>
                    <div class="col-3" style="margin: auto; text-align: center">
                      Views : <%= blog[i].views %>
                    </div>
                    <div class="col-3" style="margin: auto">
                      <div class="row">
                        <div class="col-3"></div>
                        <div class="col-2">
                          <form
                            class="form-inline"
                            action="/draft/<%=username%>/<%= blog[i].key %>"
                            ,method="get"
                          >
