            <div class="inner-form">
              <div class="input-field">
                <button class="btn-search" type="submit">
                  <img src="home/img/bar.png" width="60%" alt="" />
                </button>
                <input id="search" type="text" name="search" placeholder="What are you looking for ....." />
              </div>
            </div>
          </form>
        </div>
      </div>
      <!-- ======= Recent Blog Posts Section ======= -->
      <section id="recent-blog-posts" class="recent-blog-posts">
        <div class="container" data-aos="fade-up">
          <header class="section-header">
            <p>Top Searches</p>
          </header>

          <div class="row">
            <% topblog.forEach(function(item){ %>

              <div class="col-4 pd " style="padding-left: 5%;">
                <div class="post-box">
                  <div class="post-img">
                    <img src=<%=item.covimg %> class="img-fluid" alt="" />
                  </div>
                  <div class="row">
                    <div class="col-6">
                      <span class="post-date">
                        <%= item.lastUpdateTime %>
                      </span>
                    </div>
                    <div class="col-6" style="text-align:right;  ">
                      <span class="post-date">
                        <%= item.views %> views
                      </span>
                    </div>

                  </div>
                  <h3 class="post-title">
                    <%= item.title %>
                  </h3>
                  <a href="/view/<%=item.author%>/<%= item.key %>" class="readmore stretched-link mt-auto"><span>Read
                      More</span><i class="bi bi-arrow-right"></i></a>
                </div>
              </div>
              <% }) %>





