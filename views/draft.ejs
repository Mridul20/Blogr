    <script>
      function loadeditordata(data)
      {
        return editor = new EditorJS({
        placeholder: 'Let`s write an awesome story!',
        tools: {
            header: Header,
            raw: RawTool,
            image: SimpleImage, 
              checklist: {
                class: Checklist,
                inlineToolbar: true,
              },
              list: {
                class: List,
                inlineToolbar: true,
              },  
              embed: Embed,
              quote: Quote,
        },
        data: JSON.parse(data),
        // autofocus: true
        // readOnly: true
      });
      }
    </script>

    <section id = "secid" >
        
          <form action = "/" method="GET">
            
            <!-- Private Public Toggle -->
            <div class="switch-button">
              <input class="switch-button-checkbox" type="checkbox" name = "diplay"></input>
              <label class="switch-button-label" for=""><span class="switch-button-label-span">Public</span></label>
            </div>
            
            <!-- Image -->
            <div id="editorjs" class = "des">
              <div class="container py-5 ">
                <div class="image-area mt-4 crp"><img id="imageResult" src="#" alt="" class="img-fluid rounded shadow-sm mx-auto d-block "></div>
                <div class="row py-4 bardes" style = "margin: 0 auto;">
                  <input id="upload" type="file" onchange="readURL(this);" class="form-control border-0">
                  <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i>Choose file</label>
                </div>
              </div>

              <!-- Title -->
              <input class="blog-title" id="title" contenteditable="true" placeholder="Title" value="">
            </div>
            
            <button type = "submit" onclick="draftdata()" class="btn">Publish</button>
          </form>
          
          <button class="btn" onclick="draftdata()"> Draft </button>
    </section>

    <script>
      let author = '<%-author%>'
      let key = '<%-key%>'
      let data = '<%-data%>'
      if(data)
      {
        console.log("found");
        console.log(data);
        editor = loadeditordata(data);
        document.getElementById("title").value = '<%-title%>';
      }
      else
      {
        editor = new EditorJS({
        placeholder: 'Let`s write an awesome story!',
        tools: {
            header: Header,
            raw: RawTool,
            image: SimpleImage, 
              checklist: {
                class: Checklist,
                inlineToolbar: true,
              },
              list: {
                class: List,
                inlineToolbar: true,
              },  
              embed: Embed,
              quote: Quote,
        },
        // autofocus: true
        // readOnly: true
        });
      }
      console.log(key);
      
      function draftdata() {
        editor
          .save()
          .then((output) => {
            fetch('/saveblogdata',{
              method: 'POST',
              headers: {
                'Content-Type':'application/json'
              },
              body: JSON.stringify({
              title: document.getElementById("title").value,
              blogdata: JSON.stringify(output),
              author : author,
              key : key,
              }),
            });
        });
      }

    </script>
    <script src = "/draft/main.js"></script>    


